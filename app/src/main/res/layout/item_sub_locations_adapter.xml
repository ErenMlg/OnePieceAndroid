<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.softcross.onepiece.presentation.components.DetailBoxView
        android:id="@+id/viewSubLocationImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txtSubLocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="16dp"
            android:background="@color/primaryColor"
            android:fontFamily="@font/playfair_display_sc_black"
            android:scaleY="2"
            android:text="GECKO ISLAND"
            android:textAlignment="center"
            android:textColor="@color/subColor"
            android:textSize="18sp" />

    </com.softcross.onepiece.presentation.components.DetailBoxView>

    <com.softcross.onepiece.presentation.components.DetailBoxView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <com.softcross.onepiece.presentation.components.DetailLayoutView
            android:id="@+id/viewInfoSubLocationFirstApperance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:image="@drawable/ic_type"
            app:info_title="First Apperance" />

    </com.softcross.onepiece.presentation.components.DetailBoxView>

</LinearLayout>